<% if user_signed_in? %>
  <h4 style="text-align: center;">
    <%= current_user.email %>
  </h4>
  <ul>
    <li>
      <%= link_to('Events', admin_events_path) %>
    </li>
    <li>
      <%= link_to('Search Filters', search_filters_path) %>
    </li>
    <li>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    </li>
  </ul>
<% else %>
  <ul>
    <li>
      <%= link_to('Login', new_user_session_path) %>
    </li>
  </ul>
<% end %>

