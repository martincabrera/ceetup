<%= simple_form_for([:admin, @event]) do |f| %>
  <%= f.error_notification %>

  <% if @event.errors.any? %>
    <div id="error_explanation row">
      <h2 ><%= pluralize(@event.errors.count, "error") %>  prohibited this Event from being saved:</h2>
      <div>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>

  <% end %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.association :city, include_blank: false %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>

    Topics: <%= f.collection_check_boxes :topic_ids, Topic.all, :id, :name, {:item_wrapper_class => 'checkbox_container'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>